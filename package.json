{
  "name": "cast",
  "version": "0.1.0",
  "description": "A podcast listening PWA",
  "private": true,
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "dev": "svelte-kit dev",
    "build": "svelte-kit build",
    "package": "svelte-kit package",
    "preview": "svelte-kit preview",
    "test:e2e": "cypress run",
    "test:e2e-open": "cypress open",
    "test:unit": "jest src",
    "lint": "eslint --ignore-path .gitignore . --cache; prettier --check . --plugin-search-dir=.; svelte-check --tsconfig ./tsconfig.json",
    "fix": "eslint --ignore-path .gitignore . --fix --cache; prettier --write . --plugin-search-dir=.",
    "prepare": "husky install"
